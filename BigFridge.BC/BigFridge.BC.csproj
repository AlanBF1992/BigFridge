<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
	<MSBuildWarningsAsMessages>MSB3277</MSBuildWarningsAsMessages>
	<EnableModZip>False</EnableModZip>
	<GamePath>C:\Program Files (x86)\Steam\steamapps\common\Stardew Valley</GamePath>
	<GameModsPath>$(GamePath)\Mods\BigFridge</GameModsPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Pathoschild.Stardew.ModBuildConfig" Version="4.1.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\BigFridge\BigFridge.csproj">
	  <Private>False</Private>
	</ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <Reference Include="BetterCrafting">
      <HintPath>C:\Program Files (x86)\Steam\steamapps\common\Stardew Valley\Mods\BetterCrafting\BetterCrafting.dll</HintPath>
      <Private>False</Private>
    </Reference>
  </ItemGroup>

</Project>
